<config>
  <app>
	  <title>A Forest Adventure</title>
	  <organization>UPC</organization>
  </app>

  <renderer>
	  <vsync value="true"/>
  </renderer>

  <window>
	  <resolution width="736" height="480" scale="1"/>
	  <fullscreen value="false"/>
	  <borderless value="false"/>
	  <resizable value="false"/>
	  <fullscreen_window value="false"/>
  </window>

  <audio>
	  <music volume="128"/>
	  <fx volume="128"/>
  </audio>

  <fade>
  </fade>
  
  <scene_intro>
	  <textures texturepath="Assets/Textures/logo.png"/>
  </scene_intro>

  <scene_title>
	  <textures texturepath="Assets/Textures/menu.png"/>
	  <audio musicpath="Assets/Audio/Music/Menu-Theme_1.ogg"/>
  </scene_title>

  <!-- L02: DONE: Add an element for the entity manager and add the player parameters -->
  <level_one>
	  <player x="368" y="560" texturepath="Assets/Textures/player_tileset.png"/>
	  <goal x="3920" y="368" texturepath="Assets/Textures/gun.png"/>
    <enemy x="398" y="560" texturepath="Assets/Textures/walking_enemy_spritesheet.png" type="1"/>
    <enemy x="368" y="590" texturepath="Assets/Textures/flying_blue_enemy_spritesheet.png" type="2"/>
    <enemy x="398" y="590" texturepath="Assets/Textures/flying_yellow_enemy_spritesheet.png" type="2"/>
	  <camera x="-150" y="-288"/>
	  <audio musicpath="Assets/Audio/Music/mushroomdance_0.ogg"/>
	  <mapfile path="Assets/Maps/map_level1.tmx"/>
  </level_one>

  <level_two>
    <player x="368" y="560" texturepath="Assets/Textures/player_tileset.png"/>
    <enemy x="368" y="560" texturepath="Assets/Textures/walking_enemy_spritesheet.png" type="1"/>
    <enemy x="368" y="560" texturepath="Assets/Textures/flying_blue_enemy_spritesheet.png" type="2"/>
    <enemy x="368" y="560" texturepath="Assets/Textures/flying_yellow_enemy_spritesheet.png" type="2"/>
    <goal x="3920" y="368" texturepath="Assets/Textures/goal.png"/>
    <camera x="-150" y="-288"/>
    <audio musicpath="Assets/Audio/Music/mushroomdance_0.ogg"/>
    <mapfile path="Assets/Maps/map_level2.tmx"/>
  </level_two>

  <level_transition>
	  <textures texturepath="Assets/Textures/win_screen.png"/>
    <audio musicpath="Assets/Audio/Music/Lively Meadow Victory Fanfare.ogg"/>
  </level_transition>

  <death_screen>
	  <textures texturepath="Assets/Textures/death_screen.png"/>
    <audio musicpath="Assets/Audio/Music/ThisGameIsOver.ogg"/>
  </death_screen>

  <map>
	  <mapfolder path="Assets/Maps/"/>
  </map>
  
</config>
